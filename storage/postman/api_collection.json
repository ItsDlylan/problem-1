{
    "info": {
        "name": "Laravel API",
        "description": "API Documentation",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000"
        },
        {
            "key": "auth_token",
            "value": "your-access-token",
            "type": "string",
            "description": "Bearer token for API authentication"
        }
    ],
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{auth_token}}",
                "type": "string"
            }
        ]
    }
}